{
  "name": "course",
  "version": "0.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "author": "",
  "license": "ISC",
  "main": "src/app.ts",
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@server": [
      "src/server"
    ],
    "@config": [
      "src/config"
    ],
    "@controllers/*": [
      "src/controllers/*"
    ],
    "@dtos/*": [
      "src/dtos/*"
    ],
    "@exceptions/*": [
      "src/exceptions/*"
    ],
    "@interfaces/*": [
      "src/interfaces/*"
    ],
    "@middlewares/*": [
      "src/middlewares/*"
    ],
    "@routes/*": [
      "src/routes/*"
    ],
    "@services/*": [
      "src/services/*"
    ],
    "@utils/*": [
      "src/utils/*"
    ],
    "@models/*": [
      "src/models/*"
    ],
    "@database/*": [
      "src/database/*"
    ],
    "@types/*": [
      "src/types/*"
    ]
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "test": "cross-env NODE_ENV=test jest --config jest.config.js --forceExit --detectOpenHandles",
    "test:unit": "cross-env NODE_ENV=test jest --config jest.config.js --forceExit --detectOpenHandles",
    "test:e2e": "cross-env NODE_ENV=test jest --config jest.e2e.config.js --forceExit --detectOpenHandles --runInBand",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "cross-env NODE_ENV=test jest --config jest.e2e.config.js --coverage --forceExit --detectOpenHandles --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.e2e.config.js --watch",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only prod",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev",
    "docker:build": "docker build -f Dockerfile.prod -t transporters-backend:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t transporters-backend:dev .",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:down": "docker-compose down",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f app",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f app",
    "docker:restart": "docker-compose restart app",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@telegram-apps/init-data-node": "^2.0.8",
    "axios": "^1.7.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "js-yaml": "^4.1.1",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0",
    "tslib": "^2.0.0",
    "tsyringe": "^4.10.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.220",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^28.1.6",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.45",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "pm2": "^5.2.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": "22.x"
  }
}