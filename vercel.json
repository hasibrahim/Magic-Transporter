{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/templates/**/*"]
      }
    }
  ],
  "buildCommand": "npx prisma migrate deploy && npm run prisma:generate",
  "installCommand": "npm install",
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }]
}
